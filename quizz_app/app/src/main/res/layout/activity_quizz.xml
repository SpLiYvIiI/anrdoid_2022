<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.25" android:id="@+id/linearLayout">
        <TextView
                android:id="@+id/question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
        <RadioGroup
                android:id="@+id/possibleAnswers"
                android:layout_width="match_parent"
                android:padding="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.04">
        </RadioGroup>

    </LinearLayout>
    <Button
            android:text="Submit answer"
            android:layout_width="173dp"
            android:layout_height="66dp" android:id="@+id/sumbitAnswer"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.067" app:layout_constraintVertical_bias="0.863"
            android:textSize="18sp"/>
    <Button
            android:text="Next question"
            android:layout_width="173dp"
            android:layout_height="66dp" android:id="@+id/nextQuestion"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.692" app:layout_constraintVertical_bias="0.863"
            android:textSize="18sp" app:layout_constraintStart_toEndOf="@+id/sumbitAnswer"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/answerType"
            android:textSize="24sp" android:textColor="#EA0505" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.071"/>
</androidx.constraintlayout.widget.ConstraintLayout>